<!-- app/views/categories/show.html.erb -->
<div class="row">
  <h1 class="col s12">Category Details</h1>

  <div class="col s12 m6">
    <p><strong>Name:</strong> <%= @category.name %></p>
  </div>

  <div class="col s12 m6">
    <%= link_to 'Edit', edit_category_path(@category), class: 'btn waves-effect waves-light btn-white-text' %>
    <%= link_to 'Back', categories_path, class: 'btn waves-effect waves-light btn-white-text' %>
  </div>
</div>
